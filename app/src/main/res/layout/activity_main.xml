<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:onClick="imagebanner"

                android:scaleType="fitXY"
                android:src="@drawable/hi" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/dialog"
                        android:onClick="dialog"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:paddingRight="5dp"
                        android:src="@drawable/fire"
                        android:text="New Button1" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:paddingRight="5dp"
                        android:src="@drawable/marii"
                        android:text="New Button1" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:paddingRight="5dp"
                        android:src="@drawable/kjk"
                        android:text="New Button1" />

                </LinearLayout>
            </HorizontalScrollView>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="160dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:paddingRight="5dp"
                        android:src="@drawable/marii"
                        android:text="New Button1" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:paddingRight="5dp"
                        android:src="@drawable/kjk"
                        android:text="New Button1" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:paddingRight="5dp"
                        android:src="@drawable/nm"
                        android:text="New Button1" />

                </LinearLayout>
            </HorizontalScrollView>
            <ImageView
                android:id="@+id/imageSlider3"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                android:src="@drawable/fire" />

            <ImageView
                android:id="@+id/imageSlider22"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                android:src="@drawable/marii" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>